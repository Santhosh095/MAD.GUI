<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="50dp"
    android:id="@+id/linearLayout"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="534dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tvTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rec"
            android:textColor="#000000"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btFontSize"
            android:layout_width="220dp"
            android:layout_height="65dp"
            android:text="@string/change_font_size"
            app:strokeColor="#50EC18"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/btFontColor"
            android:layout_width="220dp"
            android:layout_height="65dp"
            android:text="@string/change_font_color"
            app:strokeColor="#50EC18"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/btBgColor"
            android:layout_width="220dp"
            android:layout_height="65dp"
            android:text="@string/change_background_color"
            app:strokeColor="#50EC18"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/textview" />
    </LinearLayout>

</LinearLayout>